@model Restaurant

@{
    ViewBag.Title = "Create";
}

<div>
    <h1>Create</h1>

    <div>
        @Html.ValidationSummary()
        <!--returns an object of type IDisposable-->
        @using (Html.BeginForm())
        {
            <div>
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name)
                <!--Show all errors that occurred for the name property-->
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div>
                @Html.LabelFor(m => m.Cuisine)
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
                @Html.ValidationMessageFor(m => m.Cuisine)
            </div>
            <div>
                <input type="submit" value="Save!" />
            </div>
        }

    </div>
</div>